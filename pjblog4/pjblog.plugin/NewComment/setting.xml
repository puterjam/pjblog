<?xml version="1.0" encoding="utf-8"?>
<PluginOptions>
   <Key name="IsShowHidden" value="0" type="select" description="显示未审核评论">
    <option value="0">显示</option>
	<option value="1">不显示</option>
  </Key>
   <Key name="IsShowAuthor" value="0" type="select" description="显示评论作者">
    <option value="0">显示</option>
	<option value="1">不显示</option>
  </Key>
  <Key name="TopNum" value="10" type="text" description="显示评论数量"/>
  <Key name="TitleLen" value="25" type="text" description="显示评论标题长度"/>
   <Key name="PluginSettingCache" value="1" type="select" description="是否马上更新缓存">
    <option value="0">否</option>
	<option value="1">是</option>
  </Key>  
</PluginOptions>